            "Roles": [ "Admin" ]
          },
          "GetUserById": {
            "Type": "http",
            "path": "api/v1/Users/getById",
            "IsAuthorization": true
          },
          "GetUsersByName": {
            "Type": "http",
            "path": "api/v1/Users/userName",
            "IsAuthorization": true
          },
          "RegisterUser": {
            "Type": "http",
            "path": "api/v1/Users"
          },
          "UserUpdate": {
            "Type": "http",
            "path": "api/v1/Users/userUpdate",
            "IsAuthorization": true,
            "Roles": [ "Admin" ]
          },
          "DeleteUser": {
            "Type": "http",
            "path": "api/v1/Users/deleteUser",
            "IsAuthorization": true,
            "Roles": [ "Admin" ]
          }
        }
      }
    }
  }
}
