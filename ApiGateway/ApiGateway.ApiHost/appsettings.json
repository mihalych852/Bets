{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "Elasticsearch",
        "Args": {
          "nodeUris": "http://elasticSearch:9200",
          "autoRegisterTemplate": true,
          "indexFormat": "logs-{0:yyyy.MM.dd}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "./Logs/failures.txt",
          "rollingInterval": "Day",
          "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog"
        }
      }
    ]
  },
  // Добавляем настройки для HTTP-логирования
  "HttpLogging": {
    "LoggingFields": "Request, Response, RequestBody, ResponseBody"
  },
  "Microservices": {
    "Services": {
      "bets": {
        "BaseUrl": "http://betsservice:8080",
        "Endpoints": {
          "AddBet": {
            "Type": "http",
            "Path": "api/v1/Bets/create",
            "RequestName": "BetsRequest",
            "IsAuthorization": true
          },
          //тут ещё ид ставки нужен
          "GetBetById": {
            "Type": "http",
            "Path": "api/v1/Bets/",
            "IsAuthorization": true
          },
          //тут ещё ид игрока (пользователя) нужен
          "GetBetsByBettorId": {
            "Type": "http",
            "Path": "api/v1/Bets/forBettor/",
            "IsAuthorization": true
          },
          "GetAllBets": {
            "Type": "http",
            "Path": "api/v1/Bets/",
            "IsAuthorization": true,
            "Roles": [ "Admin" ]
          },
          "UpdateBetsState": {
            "Type": "http",
            "Path": "api/v1/Bets/states",
            "RequestName": "BetsStateUpdateRequest",
            "IsAuthorization": true,
            "Roles": [ "Admin" ]
          },
          "AddEvent": {
            "Type": "http",
            "Path": "api/v1/Events/create",
            "RequestName": "EventRequest",
            "IsAuthorization": true,
            "Roles": [ "Admin" ]
          },
          //тут ещё ид события нужен
          "GetEventById": {
            "Type": "http",
            "Path": "api/v1/Events/"
          },
          "GetAllEvents": {
            "Type": "http",
            "Path": "api/v1/Events/"
          },
          "UpdateEvent": {
            "Type": "http",
            "Path": "api/v1/Events/update",
            "RequestName": "EventUpdateRequest",
            "IsAuthorization": true,
            "Roles": [ "Admin" ]
          },
          "DeleteEvent": {
            "Type": "http",
            "Path": "api/v1/Events/delete/",
            "RequestName": "DeleteRequest",
            "IsAuthorization": true,
            "Roles": [ "Admin" ]
          },
          "DeleteListEvents": {
            "Type": "http",
            "Path": "api/v1/Events/delete/list/",
            "RequestName": "DeleteListRequest",
            "IsAuthorization": true,
            "Roles": [ "Admin" ]
          },
          "AddEventOutcome": {
            "Type": "http",
            "Path": "api/v1/EventOutcomes/create",
            "RequestName": "EventOutcomeRequest",
            "IsAuthorization": true,
            "Roles": [ "Admin" ]
          },
          //тут ещё ид исхода нужен
          "GetEventOutcomeById": {
            "Type": "http",
            "Path": "api/v1/EventOutcomes/"
          },
          "GetAllEventOutcomes": {
            "Type": "http",
            "Path": "api/v1/Events/"
          },
          "UpdateEventOutcomes": {
            "Type": "http",
            "Path": "api/v1/EventOutcomes/update",
            "RequestName": "EventOutcomeUpdateRequest",
            "IsAuthorization": true,
            "Roles": [ "Admin" ]
          },
          "DeleteEventOutcome": {
            "Type": "http",
            "Path": "api/v1/EventOutcomes/delete/",
            "RequestName": "DeleteRequest",
            "IsAuthorization": true,
            "Roles": [ "Admin" ]
          },
          "DeleteListEventOutcomes": {
            "Type": "http",
            "Path": "api/v1/EventOutcomes/delete/list/",
            "RequestName": "DeleteListRequest",
            "IsAuthorization": true,
            "Roles": [ "Admin" ]
          }
        }
      },
      "user": {
        "BaseUrl": "http://userserver:8080",
        "Endpoints": {
          "Login": {
            "Type": "http",
            "Path": "api/v1/Auth/login"
          },
          "Logout": {
            "Type": "http",
            "Path": "api/v1/Auth/logout",
            "RequstName": "LogutRequest"
          },
          "ValidateToken": {
            "Type": "http",
            "path": "api/v1/Auth/validateToken",
            "RequstName": "LogutRequest"
          },
          "RefreshToken": {
            "Type": "http",
            "path": "api/v1/Auth/refreshToken",
            "RequstName": "LogutRequest"
          },
          "GetRoles": {
            "Type": "http",
            "path": "api/v1/Roles",
            "IsAuthorization": true,
            "Roles": [ "Admin" ]
          },
          "CreateRoles": {
            "Type": "http",
            "path": "api/v1/Roles",
            "IsAuthorization": true,
            "Roles": [ "Admin" ]
          },
          "GetUserRoles": {
            "Type": "http",
            "path": "api/v1/Roles/userRoles",
            "IsAuthorization": true,
            "Roles": [ "Admin" ]
          },
          "AddUserRole": {
            "Type": "http",
            "path": "api/v1/Roles/AddUserRole",
